    "@rollup/plugin-typescript": "^12.1.0",
    "@tsconfig/node20": "^20.1.2",
    "@types/node": "~20.19.0",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.1",
    "rollup": "^4.0.2",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@elgato/streamdeck": "^2.0.0"
  }
