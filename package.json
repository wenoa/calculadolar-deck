{
  "name": "calculadolar-streamdeck",
  "version": "1.0.0",
  "description": "Plugin de Stream Deck para mostrar cotizaciones del peso argentino",
  "author": "Wenoa Studio <https://wenoa.studio>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/wenoastudio/calculadolar-deck.git"
  },
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w --watch.onEnd=\"streamdeck restart studio.wenoa.calculadolar\"",
